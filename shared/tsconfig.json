{
    "extends": "../tsconfig.json",
    "include": ["src"],
    "exclude": ["node_modules"],
    "compilerOptions": {
        "target": "ESNext",
        "module": "CommonJS",
        "moduleResolution": "Node",
        "esModuleInterop": true,
        "baseUrl": ".",
        "paths": {
            "~/*": ["./src/*"]
        },
        "outDir": "build",
        "declaration": true
    }
}
